@using EntityLayer1.Concrete
@model List<Writer>
@{
    ViewBag.Title = "İndeks";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="tut-geçiş kenar çubuğu-mini">
    <!-- /.navbar -->
    <!-- İçerik Başlığı (Sayfa başlığı) -->
    <bölüm class="content-header">
        <div class="konteyner-akışkan">
            <div class="satır mb-2">
                <div class="col-sm-6">
                    <h1>Yazarlar Sayfası</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </bölüm>
    <!-- Ana içerik -->
    <bölüm class="content">
        <!-- Varsayılan kutu -->
        <div class="card card-solid">
            <div class="card-body pt-0">
                <div class="row d-flex align-items-stretch">
                    @foreach (var item in Model )
                    {
                        <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch">
                            <div class="card bg-light">
                                <div class="card-header text-muted border-bottom-0">
                                    Dijital Stratejist
                                </div>
                                <div class="card-body pt-0">
                                    <div class="row">
                                        <div class="col-7">
                                            <h2 class="lead"><b>@item.WriterName @item.WriterSurName</b></h2>
                                            <p class="text-muted text-sm"><b>About: </b> Web Designer/ UX / Graphic Artist / Kahve Sever </p>
                                            <ul class="ml-4 mb-0 fa-ul text-muted">
                                                <li class="small"><span class="fa-li"><i class="fas fa-lg fa-building"></i></span> Mail:@item.WriterMail</li>
                                        
                                            </ul>
                                        </div>
                                        <div class="col-5 text-center">
                                            <img src="~/AdminLTE-3.0.4/dist/img/user1-128x128.jpg" alt="" class="img-circle img-fluid">
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer>
                                    <div class="text-right">
                                        <a href="#" class="btn btn-sm bg-teal">
                                            <i class="fas fa-comment">Yazarın Başlıkları</i>
                                        </a>
                                        <a href="#" class="btn btn-sm bg-primary">
                                            <i class="fas fa-user"></i> Profili Düzenle
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <!-- /.kart -->
    </bölüm>
    <!-- /.content -->
</body>
</html>